[podcasts]
# Podcast title
podcast_title = Une heure de louange chez vous, chaque matin à partir de 6h15
podcast_description = Chaque jour retrouvez une heure de louange chez vous avec ses chroniques

# Base domain for RSS feed and links (without trailing slash)
base_url = https://example.com

# Podcast metadata
author = Votre Nom
email = contact@example.com
language = fr
# L'image doit être placée dans le dossier static/images/
# Vous pouvez utiliser une URL absolue ou un chemin relatif commençant par /static/
image_url = /static/images/podcast-cover.svg
categories = Religion & Spirituality,Christianity

# Directory where podcast files are stored
podcast_directory = podcasts

# Supported audio formats
supported_formats = mp3,m4a,wav

# Scan settings
scan_interval = 3600
recursive_scan = true

# Metadata settings
read_id3_tags = true
generate_thumbnails = true

[logging]
# Logging configuration
log_level = INFO
log_file = podcast_scanner.log